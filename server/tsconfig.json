{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,     // skip type checking node_modules
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],     // only include your source files
  "exclude": ["node_modules", "dist"]   // exclude node_modules from compilation
}
